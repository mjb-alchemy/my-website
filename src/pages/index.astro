---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Meenal Balar — illustrations, projects, writing, and reading notes." />
    <title>Meenal Balar</title>
  </head>
  <body class="min-h-screen">
    <div class="min-h-screen flex flex-col justify-between px-6 md:px-12 lg:px-24 py-8 relative overflow-hidden">
      <!-- Sophisticated decorative elements -->
      <div class="deco-circle hidden lg:block" style="top: -40px; right: -40px;"></div>
      <div class="deco-circle hidden lg:block" style="bottom: 10%; left: -60px; width: 180px; height: 180px; opacity: 0.08;"></div>
      <div class="deco-lines hidden md:block" style="top: 20%; right: 8%;"></div>
      <div class="deco-grid hidden lg:block" style="bottom: 5%; right: 5%;"></div>

      <!-- Header -->
      <header class="flex justify-between items-start relative z-10">
        <span class="text-label">Portfolio</span>
        <a href="mailto:hello@meenalbalar.com" class="text-label hover:opacity-60">
          Contact
        </a>
      </header>

      <!-- Main Content - Asymmetric Layout -->
      <main class="flex-1 flex items-center relative z-10">
        <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center">
          <!-- Name - Takes up left side -->
          <div class="lg:col-span-7 lg:pr-8 relative">
            <div class="deco-cross absolute -top-6 -left-2 hidden md:block"></div>
            <h1 class="mb-6">
              Meenal<br/>
              <span class="accent-line">Balar</span>
            </h1>
            <div class="divider-thick mb-6"></div>
            <p class="text-body-lg max-w-md">
              Illustrator, builder, and reader. Creating at the intersection of art and technology.
            </p>
          </div>

          <!-- Navigation - Right side, vertical -->
          <nav class="lg:col-span-5 lg:pl-8 lg:border-l lg:border-border relative">
            <div class="deco-dot hidden md:block" style="top: -20px; right: 20px;"></div>
            <ul class="space-y-6">
              <li>
                <a href="/illustrations" class="group flex items-center justify-between">
                  <span class="flex items-center gap-4">
                    <span class="deco-index">01</span>
                    <span class="text-2xl font-serif">Illustrations</span>
                  </span>
                  <span class="arrow-refined opacity-0 group-hover:opacity-100"></span>
                </a>
              </li>
              <li>
                <a href="/projects" class="group flex items-center justify-between">
                  <span class="flex items-center gap-4">
                    <span class="deco-index">02</span>
                    <span class="text-2xl font-serif">Projects</span>
                  </span>
                  <span class="arrow-refined opacity-0 group-hover:opacity-100"></span>
                </a>
              </li>
              <li>
                <a href="/blog" class="group flex items-center justify-between">
                  <span class="flex items-center gap-4">
                    <span class="deco-index">03</span>
                    <span class="text-2xl font-serif">Blog</span>
                  </span>
                  <span class="arrow-refined opacity-0 group-hover:opacity-100"></span>
                </a>
              </li>
              <li>
                <a href="/books" class="group flex items-center justify-between">
                  <span class="flex items-center gap-4">
                    <span class="deco-index">04</span>
                    <span class="text-2xl font-serif">Books</span>
                  </span>
                  <span class="arrow-refined opacity-0 group-hover:opacity-100"></span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </main>

      <!-- Footer -->
      <footer class="flex justify-between items-end text-label relative z-10">
        <span>© 2024</span>
        <span>Based in San Francisco</span>
      </footer>
    </div>
  </body>
</html>
