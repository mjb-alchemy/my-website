---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Meenal Balar — illustrations, projects, writing, and reading notes." />
    <title>Meenal Balar</title>
  </head>
  <body class="min-h-screen bg-bg">
    <!-- Hero Section - Full viewport, bold typography -->
    <section class="min-h-screen flex flex-col justify-between px-6 md:px-12 lg:px-16 py-8">
      <!-- Top Bar -->
      <header class="flex justify-between items-center">
        <span class="text-sm font-medium tracking-wide">Meenal Balar</span>
        <a href="mailto:hello@meenalbalar.com" class="text-sm font-medium hover:text-accent transition-colors">
          Contact
        </a>
      </header>

      <!-- Center - Giant Name -->
      <main class="flex-1 flex items-center justify-center py-16">
        <div class="text-center">
          <h1 class="text-display mb-8">
            Meenal<br/>Balar
          </h1>
          <p class="text-xl md:text-2xl text-text-muted max-w-lg mx-auto font-light">
            Illustrator, builder, and reader
          </p>
        </div>
      </main>

      <!-- Bottom Navigation - Horizontal, bold -->
      <nav class="border-t border-border pt-8">
        <ul class="flex flex-wrap justify-center gap-x-12 gap-y-4 text-lg md:text-xl">
          <li>
            <a href="/illustrations" class="group inline-flex items-center gap-2 hover:text-accent transition-colors">
              <span class="font-serif">Illustrations</span>
              <span class="opacity-0 group-hover:opacity-100 transition-opacity">→</span>
            </a>
          </li>
          <li>
            <a href="/projects" class="group inline-flex items-center gap-2 hover:text-accent transition-colors">
              <span class="font-serif">Projects</span>
              <span class="opacity-0 group-hover:opacity-100 transition-opacity">→</span>
            </a>
          </li>
          <li>
            <a href="/blog" class="group inline-flex items-center gap-2 hover:text-accent transition-colors">
              <span class="font-serif">Blog</span>
              <span class="opacity-0 group-hover:opacity-100 transition-opacity">→</span>
            </a>
          </li>
          <li>
            <a href="/books" class="group inline-flex items-center gap-2 hover:text-accent transition-colors">
              <span class="font-serif">Books</span>
              <span class="opacity-0 group-hover:opacity-100 transition-opacity">→</span>
            </a>
          </li>
        </ul>
      </nav>
    </section>

    <!-- Optional: Featured Section -->
    <section class="bg-bg-alt py-24 px-6 md:px-12 lg:px-16">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
          <div>
            <span class="text-sm font-medium tracking-widest uppercase text-text-muted mb-4 block">About</span>
            <h2 class="mb-6">Creating at the intersection of art & technology</h2>
            <p class="text-lg text-text-muted leading-relaxed mb-8">
              I'm an illustrator and builder based in San Francisco. My work explores narrative, form, and the places where craft meets code.
            </p>
            <a href="/projects" class="inline-flex items-center gap-2 text-lg font-medium hover:text-accent transition-colors">
              View my work <span>→</span>
            </a>
          </div>
          <div class="aspect-[4/3] bg-border">
            <!-- Placeholder for featured image -->
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 md:px-12 lg:px-16 border-t border-border">
      <div class="max-w-6xl mx-auto flex justify-between items-center text-sm text-text-muted">
        <span>© 2024 Meenal Balar</span>
        <span>San Francisco, CA</span>
      </div>
    </footer>
  </body>
</html>
