---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Meenal Balar — illustrations, projects, writing, and reading notes." />
    <title>Meenal Balar</title>
  </head>
  <body class="min-h-screen">
    <div class="min-h-screen flex flex-col justify-between px-6 md:px-12 lg:px-24 py-8 relative">
      <!-- Zine corner marks -->
      <span class="zine-corner top-right hidden md:block">✳</span>

      <!-- Header -->
      <header class="flex justify-between items-start relative z-10">
        <span class="zine-label">Portfolio / 2024</span>
        <a href="mailto:hello@meenalbalar.com" class="zine-label hover:opacity-60">
          Contact →
        </a>
      </header>

      <!-- Main Content - Asymmetric Layout -->
      <main class="flex-1 flex items-center relative z-10">
        <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center">
          <!-- Name - Takes up left side -->
          <div class="lg:col-span-7 lg:pr-8">
            <h1 class="mb-6 zine-tilt-1">
              Meenal<br/>
              <span class="zine-underline">Balar</span>
            </h1>
            <div class="zine-divider w-32 mb-6">✦</div>
            <p class="text-body-lg max-w-md">
              Illustrator, builder, and reader. Creating at the intersection of art and technology.
            </p>
          </div>

          <!-- Navigation - Right side, vertical -->
          <nav class="lg:col-span-5 lg:pl-8 lg:border-l lg:border-border">
            <ul class="space-y-5">
              <li>
                <a href="/illustrations" class="group flex items-center justify-between zine-hover">
                  <span class="flex items-center gap-3">
                    <span class="zine-index">01</span>
                    <span class="text-2xl font-serif">Illustrations</span>
                  </span>
                  <span class="zine-arrow opacity-0 group-hover:opacity-100">→</span>
                </a>
              </li>
              <li>
                <a href="/projects" class="group flex items-center justify-between zine-hover">
                  <span class="flex items-center gap-3">
                    <span class="zine-index">02</span>
                    <span class="text-2xl font-serif">Projects</span>
                  </span>
                  <span class="zine-arrow opacity-0 group-hover:opacity-100">→</span>
                </a>
              </li>
              <li>
                <a href="/blog" class="group flex items-center justify-between zine-hover">
                  <span class="flex items-center gap-3">
                    <span class="zine-index">03</span>
                    <span class="text-2xl font-serif">Blog</span>
                  </span>
                  <span class="zine-arrow opacity-0 group-hover:opacity-100">→</span>
                </a>
              </li>
              <li>
                <a href="/books" class="group flex items-center justify-between zine-hover">
                  <span class="flex items-center gap-3">
                    <span class="zine-index">04</span>
                    <span class="text-2xl font-serif">Books</span>
                  </span>
                  <span class="zine-arrow opacity-0 group-hover:opacity-100">→</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </main>

      <!-- Footer -->
      <footer class="flex justify-between items-end relative z-10">
        <span class="zine-page-num">© 2024</span>
        <span class="zine-label">San Francisco, CA</span>
      </footer>
    </div>
  </body>
</html>
