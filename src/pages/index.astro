---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Meenal Balar — illustrations, projects, writing, and reading notes." />
    <title>Meenal Balar</title>
  </head>
  <body class="min-h-screen">
    <div class="min-h-screen flex flex-col justify-between px-6 md:px-12 lg:px-24 py-8 relative overflow-hidden">
      <!-- Decorative sketch elements -->
      <div class="sketch-corner top-left"></div>
      <div class="sketch-corner top-right"></div>
      <div class="sketch-dots" style="top: 15%; right: 5%;"></div>
      <div class="sketch-scribble" style="bottom: 20%; left: 2%;"></div>

      <!-- Header -->
      <header class="flex justify-between items-start relative z-10">
        <span class="text-label">Portfolio</span>
        <a href="mailto:hello@meenalbalar.com" class="text-label hover:opacity-60">
          Contact
        </a>
      </header>

      <!-- Main Content - Asymmetric Layout -->
      <main class="flex-1 flex items-center relative z-10">
        <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center">
          <!-- Name - Takes up left side, slightly offset -->
          <div class="lg:col-span-7 lg:pr-8 relative">
            <div class="sketch-star absolute -top-8 -left-4 opacity-60"></div>
            <h1 class="mb-6">
              <span class="sketch-brush">Meenal</span><br/>
              <span class="sketch-underline">Balar</span>
            </h1>
            <div class="sketch-divider w-24 mb-6"></div>
            <p class="text-body-lg max-w-md">
              Illustrator, builder, and reader. Creating at the intersection of art and technology.
            </p>
          </div>

          <!-- Navigation - Right side, vertical -->
          <nav class="lg:col-span-5 lg:pl-8 lg:border-l lg:border-border relative">
            <div class="sketch-dots absolute -top-6 -right-4 opacity-50" style="width: 60px; height: 30px;"></div>
            <ul class="space-y-6">
              <li>
                <a href="/illustrations" class="group flex items-center justify-between hover-wiggle">
                  <span class="text-2xl font-serif">Illustrations</span>
                  <span class="sketch-arrow opacity-0 group-hover:opacity-100 transition-opacity"></span>
                </a>
              </li>
              <li>
                <a href="/projects" class="group flex items-center justify-between hover-wiggle">
                  <span class="text-2xl font-serif">Projects</span>
                  <span class="sketch-arrow opacity-0 group-hover:opacity-100 transition-opacity"></span>
                </a>
              </li>
              <li>
                <a href="/blog" class="group flex items-center justify-between hover-wiggle">
                  <span class="text-2xl font-serif">Blog</span>
                  <span class="sketch-arrow opacity-0 group-hover:opacity-100 transition-opacity"></span>
                </a>
              </li>
              <li>
                <a href="/books" class="group flex items-center justify-between hover-wiggle">
                  <span class="text-2xl font-serif">Books</span>
                  <span class="sketch-arrow opacity-0 group-hover:opacity-100 transition-opacity"></span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </main>

      <!-- Footer -->
      <footer class="flex justify-between items-end text-label relative z-10">
        <span>© 2024</span>
        <span class="flex items-center gap-2">
          <span class="sketch-star" style="width: 16px; height: 16px;"></span>
          Based in San Francisco
        </span>
      </footer>
    </div>
  </body>
</html>
