---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Meenal Balar — illustrations, projects, writing, and reading notes." />
    <title>Meenal Balar</title>
  </head>
  <body class="paper-texture min-h-screen flex flex-col items-center justify-center px-6 py-12">
    <!-- Cover Page Content -->
    <div class="max-w-md text-center tilt-subtle">
      <!-- Name -->
      <h1 class="text-4xl md:text-5xl font-display font-semibold text-indigo mb-8 hand-underline inline-block">
        Meenal Balar
      </h1>

      <!-- Tagline -->
      <p class="text-sepia text-sm mb-12 tracking-wide">
        illustrator · builder · reader
      </p>

      <!-- Table of Contents Navigation -->
      <nav class="stitched inline-block mx-auto">
        <ul class="space-y-4 text-left">
          <li class="flex items-center gap-4">
            <span class="text-ochre text-xs font-mono">01</span>
            <a href="/illustrations" class="text-lg hover:text-ochre transition-colors">
              Illustrations
            </a>
          </li>
          <li class="flex items-center gap-4">
            <span class="text-ochre text-xs font-mono">02</span>
            <a href="/projects" class="text-lg hover:text-ochre transition-colors">
              Projects
            </a>
          </li>
          <li class="flex items-center gap-4">
            <span class="text-ochre text-xs font-mono">03</span>
            <a href="/blog" class="text-lg hover:text-ochre transition-colors">
              Blog
            </a>
          </li>
          <li class="flex items-center gap-4">
            <span class="text-ochre text-xs font-mono">04</span>
            <a href="/books" class="text-lg hover:text-ochre transition-colors">
              Books
            </a>
          </li>
        </ul>
      </nav>

      <!-- Decorative element -->
      <div class="mt-12 text-ochre opacity-50">
        <svg width="40" height="40" viewBox="0 0 40 40" class="mx-auto">
          <circle cx="20" cy="20" r="3" fill="currentColor"/>
          <circle cx="20" cy="20" r="10" fill="none" stroke="currentColor" stroke-width="1" stroke-dasharray="3 3"/>
          <circle cx="20" cy="20" r="17" fill="none" stroke="currentColor" stroke-width="0.5" stroke-dasharray="2 4"/>
        </svg>
      </div>
    </div>

    <!-- Footer colophon -->
    <footer class="absolute bottom-6 text-center text-xs text-sepia opacity-60">
      <p>
        <a href="mailto:hello@meenalbalar.com" class="hover:text-ochre">hello@meenalbalar.com</a>
      </p>
    </footer>
  </body>
</html>
