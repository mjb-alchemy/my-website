---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="max-w-2xl mx-auto px-6 py-12">
    <!-- Header -->
    <header class="mb-12 text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-sm text-sepia hover:text-ochre transition-colors mb-8"
      >
        <span>←</span>
        <span>Back to blog</span>
      </a>

      <h1 class="text-3xl md:text-4xl font-display font-semibold text-indigo mb-4 hand-underline inline-block">
        {post.data.title}
      </h1>

      <p class="text-sm text-sepia">
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </p>
    </header>

    <!-- Content -->
    <div class="prose">
      <Content />
    </div>

    <!-- Footer -->
    <footer class="mt-16 pt-8 border-t border-amber/30">
      <div class="divider">End</div>
      <div class="text-center">
        <a
          href="/blog"
          class="text-sm text-sepia hover:text-ochre transition-colors"
        >
          ← Read more posts
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .prose {
    color: var(--color-indigo);
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-indigo);
  }

  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-indigo);
  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
  }

  .prose :global(a) {
    color: var(--color-ochre);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: var(--color-indigo);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(ul li) {
    list-style-type: disc;
  }

  .prose :global(ol li) {
    list-style-type: decimal;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-ochre);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-sepia);
  }

  .prose :global(code) {
    background: var(--color-cream-dark);
    padding: 0.125rem 0.375rem;
    border-radius: 2px;
    font-size: 0.875em;
  }

  .prose :global(pre) {
    background: var(--color-indigo);
    color: var(--color-cream);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(img) {
    border-radius: 4px;
    margin: 1.5rem 0;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-amber);
    margin: 2rem 0;
  }

  .prose :global(strong) {
    font-weight: 600;
  }
</style>
