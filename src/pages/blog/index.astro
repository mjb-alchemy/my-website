---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Blog">
  <header class="pt-12 pb-16 max-w-3xl">
    <span class="zine-label mb-4 block zine-marker">Writing</span>
    <h1 class="mb-6 zine-tilt-1"><span class="zine-underline">Blog</span></h1>
    <p class="text-body-lg max-w-xl">
      Essays, reflections, and notes on things I'm learning and thinking about.
    </p>
  </header>

  <div class="max-w-3xl">
    {sortedPosts.length === 0 ? (
      <div class="py-24 text-center">
        <p class="text-text-muted mb-2">No posts yet.</p>
        <p class="text-sm text-text-light">
          Write your first post through the CMS at <code class="bg-bg-alt px-2 py-1">/admin</code>
        </p>
      </div>
    ) : (
      <div class="divide-y divide-border">
        {sortedPosts.map((post) => (
          <article class="group py-8 first:pt-0">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="flex items-start justify-between gap-8">
                <div class="flex-1">
                  <h2 class="text-xl font-serif mb-2 group-hover:opacity-60 transition-opacity">
                    {post.data.title}
                  </h2>
                  {post.data.description && (
                    <p class="text-text-muted">
                      {post.data.description}
                    </p>
                  )}
                </div>
                <span class="text-label shrink-0 mt-1">
                  {post.data.date.toLocaleDateString('en-US', {
                    month: 'short',
                    year: 'numeric'
                  })}
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
